{
  "name": "nisshi-dev-survey",
  "version": "0.11.1",
  "type": "module",
  "private": true,
  "engines": {
    "node": "24.x"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "24.x",
      "onFail": "warn"
    },
    "packageManager": {
      "name": "npm",
      "version": "11.x",
      "onFail": "warn"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "prisma migrate deploy && prisma generate && npm run generate && npm run build:api && vite build",
    "build:api": "vite build --ssr src/server/entry-vercel.ts --outDir api && mv api/entry-vercel.js api/index.js",
    "preview": "vite preview",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx --env-file=.env scripts/seed-admin.ts",
    "generate": "npm run generate:openapi && npm run generate:client",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "generate:client": "orval",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "dependencies": {
    "@heroui/react": "3.0.0-beta.6",
    "@heroui/styles": "3.0.0-beta.6",
    "@hono/standard-validator": "0.2.2",
    "@hono/swagger-ui": "0.5.3",
    "@prisma/adapter-pg": "7.4.0",
    "@prisma/client": "7.4.0",
    "@react-email/components": "1.0.7",
    "@tailwindcss/typography": "0.5.19",
    "@valibot/to-json-schema": "1.5.0",
    "hono": "4.11.9",
    "hono-openapi": "1.2.0",
    "motion": "12.34.0",
    "pg": "8.18.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-markdown": "10.1.0",
    "react-router-dom": "7.13.0",
    "recharts": "3.7.0",
    "remark-gfm": "4.0.1",
    "resend": "6.9.2",
    "swr": "2.4.0",
    "tailwind-variants": "3.2.2",
    "valibot": "1.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@hono/vite-dev-server": "0.25.0",
    "@orval/swr": "8.4.0",
    "@tailwindcss/vite": "4.1.18",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.x",
    "@types/pg": "8.16.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "@vitest/coverage-v8": "4.0.18",
    "globals": "17.3.0",
    "jsdom": "28.1.0",
    "orval": "8.4.0",
    "prisma": "7.4.0",
    "tsx": "4.x",
    "typescript": "5.x",
    "ultracite": "7.2.3",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  }
}
